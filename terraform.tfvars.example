# Copy this file to terraform.tfvars and customize the values
aws_region = "eu-north-1"
cluster_name = "your-eks-name"
environment = "dev"
project_name = "project-name"

# Backend specs
s3_bucket       = "your-s3-bucket-name-for-terraform-state"
dynamo_db_table = "your-dynamodb-table-name-for-terraform-state-lock"

# Node group configuration - Use multiple instance types for better availability
node_group_instance_types = ["t3.small", "t3.medium", "t3.large", "m5.large"]
node_group_desired_size = 2
node_group_min_size = 1
node_group_max_size = 4

# SQS queue name
sqs_queue_name = "your-keda-queue"